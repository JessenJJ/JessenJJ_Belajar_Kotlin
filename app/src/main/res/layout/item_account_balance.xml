<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/background_rounded_menu">
            <TextView
                android:id="@+id/tvTipeTabungan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tahapan Wadiah Non Bonus"/>
            <TextView
                android:id="@+id/tvNomorRekening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0010564684"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvRP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RP"/>
                <TextView
                    android:id="@+id/tvNominalAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="******"/>
                <ImageView
                    android:id="@+id/ivLogoMata"
                    android:background="@drawable/red_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"/>

            </LinearLayout>






        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>