<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvTransferType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Pembayaran QR"
        />

    <TextView
        android:id="@+id/tvTransferDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTransferType"
        app:layout_constraintStart_toStartOf="@id/tvTransferType"
        tools:text="Qris tuan ruma"
        />
    <TextView
        android:id="@+id/tvTransferDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTransferDestination"
        app:layout_constraintStart_toStartOf="@id/tvTransferDestination"
        tools:text="13/03/2024"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/tvTransferType"
        app:layout_constraintBottom_toBottomOf="@id/tvTransferDate"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTransferStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Success"
            />
        <TextView
            android:id="@+id/tvTransferNominal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Rp 2.000.000.000.000"
            />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>